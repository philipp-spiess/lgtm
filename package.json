{
  "name": "lgtm",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/philippspiess/lgtm"
  },
  "license": "MIT",
  "author": "Philipp Spiess <philipp@spiess.dev>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "check": "pnpm typecheck && biome check .",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "pnpm wrangler d1 migrations apply lgtm --local",
    "deploy": "wrangler pages deploy ./build/client --project-name=lgtm",
    "dev": "remix vite:dev",
    "format": "biome check --apply .",
    "start": "wrangler pages dev ./build/client",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.7.2",
    "@remix-run/cloudflare-pages": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.4",
    "isbot": "^5.1.0",
    "lucide-react": "^0.338.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.6.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@cloudflare/workers-types": "^4.20240222.0",
    "@remix-run/dev": "^2.7.2",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.14",
    "miniflare": "^3.20240208.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-env-only": "^2.2.0",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.0",
    "wrangler": "^3.29.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
